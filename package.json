{
  "name": "webdrop",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "serve-dev": "nodemon",
    "dev": "tsc && vite dev",
    "build": "tsc && vite build && npm run build-server",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 2",
    "build-server": "tsc -m commonjs -t es5 --allowJs --esModuleInterop server.cts",
    "serve": "node server.cjs"
  },
  "dependencies": {
    "express": "^4.18.2",
    "js-cookie": "^3.0.5",
    "js-file-download": "^0.4.12",
    "lodash": "^4.17.21",
    "morgan": "^1.10.0",
    "peer": "^1.0.2",
    "peerjs": "^1.5.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hot-toast": "^2.4.1",
    "react-qr-code": "^2.0.12"
  },
  "devDependencies": {
    "@types/js-cookie": "^3.0.6",
    "@types/lodash": "^4.14.202",
    "@types/morgan": "^1.9.9",
    "@types/react": "^18.2.56",
    "@types/react-dom": "^18.2.19",
    "@typescript-eslint/eslint-plugin": "^7.0.2",
    "@typescript-eslint/parser": "^7.0.2",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.17",
    "eslint": "^8.56.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "nodemon": "^3.1.0",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.2.2",
    "vite": "^5.1.4"
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      "**/*.test.tsx",
      "node_modules",
      ".git"
    ],
    "exec": "npm run build && npm run serve",
    "watch": [
      "src",
      "server.cts"
    ],
    "ext": "tsx ts cjs cts js json css",
    "env": {
      "NODE_ENV": "development"
    }
  }
}